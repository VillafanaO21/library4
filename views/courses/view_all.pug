extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Books
    table
        thead
            tr
                th Title
                th Genre
                th Cover
                th Pages
                th Description
                th Author
                th Publisher
                th
        tbody
            each book in books
                tr
                    td= book.name
                    td= book.genre
                    td= book.cover
                    td= book.pages
                    td= book.description
                    td= book.author
                    td= book.publisher
                    td
                        a(href=`/books/profile/${book.id}`) View Book